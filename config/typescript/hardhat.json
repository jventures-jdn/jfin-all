{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Hardhat Typescript",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true
  }
}
